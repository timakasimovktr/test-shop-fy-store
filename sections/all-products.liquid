<div class="catagary_section_2">
    <div class="container-fluid">
        <div class="row">
            {% for product in collections['all'].products limit:3%}
            <div class="col-md-4">
                <div class="box_man">
                    <h3 class="mobile_text">{{ product.title }}</h3>
                    <div class="mobile_img"><img src="{{ product.featured_image.src | image_url: width: 400, height: 300 }}}" alt="{{ product.featured_image.alt | escape }}"></div>
                    <div class="cart_main">
                        <div class="cart_bt"><a href="{{ product.url | within: collection }}">Add To Cart</a></div>
                        <h4 class="samsung_text">{% for tag in product.tags %}{{ tag }}{% endfor %}</h4>
                        <h6 class="rate_text"><a href="{{ product.url | within: collection }}">{{ product.price }}$</a></h6>
                        <h6 class="rate_text_1">{{ product.compare_at_price }}$</h6>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
</div>